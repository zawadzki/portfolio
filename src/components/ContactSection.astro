---
import type { StatusLineData } from "../data/homepage";
import ContactForm from "./ContactForm.astro";
type ContactButton = {
  href: string;
  label: string;
  iconClass: string;
};

type ContactData = {
  title: string;
  subtitle: string;
  buttons: ContactButton[];
};

type Props = {
  data: ContactData;
  statusLine: StatusLineData;
};

const { data, statusLine } = Astro.props as Props;
const { title, subtitle, buttons } = data as ContactData;
---

<section class="section px-5 py-10 full-h flex items-center">
  <div class="lead align-center" data-reveal>
    <h2>{title}</h2>
    <div class="description">
      <p>{subtitle}</p>
    </div>
    <div class="buttons">
      {buttons.map((button) => (
        <a class="button button-primary mt-2" href={button.href} target="_blank" rel="noreferrer">
          <i class={`icon ${button.iconClass}`} aria-hidden="true"></i> {button.label}
        </a>
      ))}
    </div>
    <ContactForm
      buttonLabel="say hi"
      buttonIconClass="icon-hand"
      statusLine={statusLine}
    />
  </div>
</section>
